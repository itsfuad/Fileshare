<!DOCTYPE html>
<html lang="en">
<head>

  <link rel="icon" href="/share-mini.png" type="image/png">
  <%- include('layout/header.ejs') %>

  <link rel="stylesheet" href="/styles/style.min.css"></link>

  <script defer src="/libs/qrcode.js"></script>
  <script defer src="/scripts/app.min.js?v=2"></script>

</head>
<body>
    <div class="offline noSelect"></div>
    <div class="container noSelect">
        <div class="title" id="title">
            Upload file to cloud
            <div style="font-size: 0.8rem;">Files will be deleted after 30 minutes</div>
        </div>
        <form id="container1" class="active noSelect">
            <label for="file" id="drop_zone" class="dropZone noSelect clickable">
                <div class="chooser noSelect">
                    <p>Choose file from device</p>
                    <p>Or</p>
                    <p>Drag and drop here</p>
                </div>
                <div class="filemeta hidden noSelect">
                    <div class="icon noSelect"><img src="/images/file-small.png" alt="Icon" height="80px" width="80px"></div>
                    <div class="filename noSelect">Filename: <span class="name"> filename</span></div>
                    <div class="filesize noSelect">Size <span class="size"> filesize </span></div>
                </div>
            </label>
            <div class="err noSelect"></div>
            <input style="display: none;" class="noSelect" type="file" id="file" name="file"/>
            <input type="submit" id="upload" class="clickable noSelect" value="Upload" />
        </form>
        <div id="container2" class="noSelect">
            <div class="progress noSelect active">
                <div id="percent">0%</div><div class="bar"></div>
            </div>
            <div class="out noSelect">
                <label for="qrcode">Scan this QR code</label>
                <div id="fileID">File ID: <span id="fileIdNum">------</span></div>
                <div id="qrcode" class="noSelect"></div>
                <div id="copyLink" class="link btn noSelect clickable" data-link>Copy link</div>
                <div class="btn noSelect clickable" id="reupload">Upload more files</div>
            </div>
        </div>
    </div>
    <legend>Or</legend>
    <div class="container noSelect recieveFileContainer">
        <!--Recieve file-->
        <div class="title" id="title2">Recieve file</div>
        <div class="inputField">
            <input placeholder="File ID" type="text" name="fileID" id="recieveFileId">
        </div>
        <input type="button" id="download" class="clickable btn" value="Download">
    </div>
    <div class="popup-message noSelect"></div>
    <footer class="noSelect">Fuad Hasan - <a href="https://github.com/itsfuad/aiubfileshare" style="background: none;margin: 0;padding: 0;text-decoration: underline;">Source code</a></footer>
</body>
</html>